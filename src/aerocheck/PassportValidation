 package pcheckin;
import java.time.LocalDate;
/**
 *
 * @author ASUS
 */
public class PassportValidator {
    public static boolean validatePassport(CustomerInfo passenger) {
        return validatePassportNumber(passenger.getPassportNumber()) &&
               validatePassportExpiryDate(passenger.getPassportExpiryDate()) &&
               validateCustomerName(passenger.getName()) &&
               validateCustomerCountry(passenger.getCountry());
    }

    private static boolean validatePassportNumber(String passportNumber) {
        // A simple passport number validation logic (can be extended)
        return passportNumber != null && passportNumber.matches("^[A-Z0-9]{6,9}$");
    }

    private static boolean validatePassportExpiryDate(LocalDate expiryDate) {
        // Validate that the passport expiry date is in the future
        return expiryDate != null && expiryDate.isAfter(LocalDate.now());
    }

    private static boolean validateCustomerName(String name) {
        // Validate that the name is not null or empty
        return name != null && !name.trim().isEmpty();
    }

    private static boolean validateCustomerCountry(String country) {
        // Validate that the country is not null or empty
        return country != null && !country.trim().isEmpty();
    }
}
